<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">World Tracker</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="@(ViewBag.Title == "Home" ? "active" : "")">
                    @Html.ActionLink("Home", "Index", "Home")</li>
                <li class="@(ViewBag.Title == "Characters" ? "active" : "")">
                    @Html.ActionLink("Characters", "Index", "Characters")</li>
                <li class="@(ViewBag.Title == "Locations" ? "active" : "")">
                    @Html.ActionLink("Locations", "Index", "Locations")</li>
                <li class="@(ViewBag.Title == "Events" ? "active" : "")">
                    @Html.ActionLink("Events", "Index", "Events")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="@(ViewBag.Title == "Register" ? "active" : "")">
                    @Html.ActionLink("Register", "Register", "Auth")
                </li>
                <li class="@(ViewBag.Title == "Login" ? "active" : "")">
                    @Html.ActionLink("Log In", "Login", "Auth")
                </li>
                <li>
                    <a asp-controller="Auth" asp-action="Logout">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="footer" style="padding:20px">
        <div class="container">
            <span class="text-muted">Author: Aaron Flager, 2017.  
                <a asp-controller="Auth" asp-action="AdminRegister">Admin Register</a>
            </span>
        </div>
    </footer>

</body>
</html>