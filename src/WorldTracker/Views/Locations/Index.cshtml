@model List<Location>

@{
    ViewBag.Title = "Locations";
}

<div class="container">
    <a href="@Url.Action("LocationAdd", "Locations")" class="btn btn-primary">
        Add Location
    </a><br />
</div>

<div class="container">
    <h2>Location List</h2>
    <div class="panel-group">
        @foreach (var loc in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">@loc.Name</div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">Description: @loc.Description</li>
                        <li class="list-group-item">Geography: @loc.Geography</li>

                    </ul>
                    <a href="@Url.Action("LocationUpdate", "Locations", new { Name = loc.Name, LocationID = loc.LocationID })" class="btn btn-default">
                        Update Location
                    </a><br />
                    <a href="@Url.Action("LocationDelete", "Locations", loc)" class="btn btn-default">
                        Delete Location
                    </a><br />
                </div>
            </div>
        }
    </div>
</div>